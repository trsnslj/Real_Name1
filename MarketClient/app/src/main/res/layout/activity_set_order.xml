<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.realname.marketclient.activity.SetOrderActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="24sp"
                    android:src="@drawable/back"
                    android:layout_height="30sp" />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                  android:gravity="center"
                    style="@style/TextStyle"
                    android:text=""
                    android:textColor="@color/white" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextStyle"
                    android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:text="确认"/>


            </RelativeLayout>



        </RelativeLayout>





    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <View style="@style/HorizontalLine" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingStart="10dp"
            tools:ignore="RtlSymmetry"
            android:paddingLeft="10dp">

            <TextView
                style="@style/TextStyle"
                android:text="" />
            <EditText
                style="@style/TextStyle"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="30dp"
                android:background="@color/transparent"
                android:maxLength="20"
                android:maxLines="1"
                android:id="@+id/edt_name"
                android:layout_marginLeft="30dp" />
        </LinearLayout>
        <View style="@style/HorizontalLine" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingStart="10dp"
            tools:ignore="RtlSymmetry"
            android:paddingLeft="10dp">
            <TextView
                style="@style/TextStyle"
                android:text="手 机 号 码" />
            <EditText
                android:id="@+id/edt_tel"
                style="@style/TextStyle"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:background="@color/transparent"
                android:maxLength="20"
                android:maxLines="1"
                android:layout_marginLeft="20dp" />
        </LinearLayout>
        <View style="@style/HorizontalLine" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingStart="10dp"
            tools:ignore="RtlSymmetry"
            android:paddingLeft="10dp">
            <TextView
                style="@style/TextStyle"
                android:text="所 在 地 区"
                android:layout_height="45dp"
                android:gravity="center" />
            <TextView
                style="@style/TextStyle"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:textAlignment="textStart"
                android:id="@+id/edt_area"
                android:layout_marginStart="15dp"
                android:background="@color/transparent"
                android:layout_marginLeft="15dp"
                android:gravity="start" />
        </LinearLayout>
        <View style="@style/HorizontalLine" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingStart="10dp"
            tools:ignore="RtlSymmetry"
            android:paddingLeft="10dp">
            <TextView
                style="@style/TextStyle"
                android:text="详 细 地 址" />
            <EditText
                android:id="@+id/edt_area_detail"
                style="@style/TextStyle"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:background="@color/transparent"
                android:hint="如乡镇、道路、门牌号、小区"
                android:maxLength="20"
                android:maxLines="1"
                android:layout_marginLeft="20dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>