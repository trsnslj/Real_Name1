<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/product1"
        android:background="@color/white"
        android:layout_marginTop="0sp"
        android:padding="10dp"
        android:layout_marginLeft="0dp">
        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:scaleType="fitXY"
            android:id="@+id/product1Img"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:id="@+id/product1Name"
            style="@style/TextStyle"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="12sp"
            android:gravity="center_horizontal" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000.00"
                style="@style/TextStyle"
                android:id="@+id/product1Saleprice"
                android:maxLines="2"
                android:textColor="@color/light_yellow"
                android:layout_marginLeft="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000.00"
                android:id="@+id/product1Realprice"
                android:gravity="center_vertical"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:layout_marginLeft="15dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/product2"
        android:background="@color/white"
        android:layout_marginTop="10sp"
        android:padding="10dp"
        android:layout_marginLeft="30sp">
        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:scaleType="fitXY"
            android:id="@+id/product2Img"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:id="@+id/product2Name"
            style="@style/TextStyle"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="12sp"
            android:gravity="center_horizontal" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000.00"
                style="@style/TextStyle"
                android:id="@+id/product2Saleprice"
                android:maxLines="2"
                android:textColor="@color/light_yellow"
                android:layout_marginLeft="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000.00"
                android:id="@+id/product2Realprice"
                android:gravity="center_vertical"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:layout_marginLeft="15dp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>