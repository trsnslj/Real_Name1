<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.realname.marketclient.activity.EvaluteActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/blue">
        <ImageView
            android:id="@+id/evalute_back"
            android:layout_width="24sp"
            android:src="@drawable/back"
            android:layout_height="30sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150sp"
            style="@style/TextStyle"
            android:text=""
            android:textColor="@color/white"
            />

<!--        <ImageView
            android:id="@+id/evalute_order"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginLeft="136sp"
            android:src="@drawable/evalute"
        />-->
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/evalute_product_img"
            android:layout_marginLeft="20sp"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:src="@drawable/evalutecar"/>
        <TextView
            android:id="@+id/evalute_product_name"
            style="@style/TextStyle"
            android:paddingLeft="20sp"
            android:paddingTop="10sp"
            android:hint=""
            android:layout_width="match_parent"
            android:layout_height="50sp" />
    </LinearLayout>

    <View style="@style/HorizontalLine"
/>
    <EditText
        android:id="@+id/evaluate_context"
        style="@style/TextStyle"
        android:gravity="top"
        android:hint="@string/evalute"
        android:layout_width="match_parent"
        android:layout_height="100sp" />
    <!--<ImageView-->
        <!--android:layout_marginLeft="10sp"-->
        <!--android:layout_width="50sp"-->
        <!--android:layout_height="50sp"-->
        <!--android:src="@drawable/addpicture"/>-->
    <View style="@style/HorizontalLine"
       />
    <TextView
        style="@style/TextStyle"
        android:layout_marginTop="5sp"
        android:text=""
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View style="@style/HorizontalLine"
        />
    <Button
        android:id="@+id/evalute_check"
        android:text=""
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:layout_gravity="right"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>